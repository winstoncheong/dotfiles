	name = Winston Cheong
	email = cheong.winston1337@gmail.com
[core]
	editor = nvim
	pager = less -+F
[color]
	ui = true
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	di = diff
	aa = add --all
	dc = diff --cached
	pullff = pull --ff-only
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	diffstat = diff --stat -r
	changes = diff --name-status -r
	lc = log ORIG_HEAD.. --stat --no-merges
